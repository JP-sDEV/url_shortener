{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "client/build"
        }
      },
      {
        "src": "server/src/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/src/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "client/build/$1"
      }
    ],
    "env": {
      "SESSION_SECRET": "@session_secret",
      "SERVER_URL": "@server_url",
      "CLIENT_URL": "@client_url"
    }
  }
  